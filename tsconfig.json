{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["dom", "es2020"],
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
    // "noUnusedParameters": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
